{
  "manifest_version": 3,
  "name": "KB Manager - Trusted Sources Knowledge Base",
  "version": "1.0.0",
  "description": "Save articles, tweets, and posts to your local YAML knowledge base",

  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging",
    "scripting"
  ],

  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "*://linkedin.com/*",
    "*://www.linkedin.com/*",
    "*://*.substack.com/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Add to Knowledge Base"
  },

  "options_page": "options/options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["content-scripts/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
